<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= image_tag cart_item.item.image %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
      <td></td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する", cart_item_path(@cart_item), method: :delete %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= link_to "買い物を続ける", root_path %>

<table>
  <tbody>
    <tr>合計金額</tr>
    <% @cart_items.each do |cart_item| %>
    <td><%= @total += cart_item.subtotal %></td>
    <% end %>
  </tbody>
</table>

<%= link_to "情報入力に進む", root_path %>
