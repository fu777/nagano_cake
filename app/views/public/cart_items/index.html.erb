<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th></th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= image_tag cart_item.item.image %></td>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
      <td>
          <%= form_with model: @cart_item, url: cart_item_path(current_customer.cart_items), method: :patch, local: true do |f| %>
          <%= f.select :amount, options_for_select(*[1..10], cart_item.amount) %>
          <%= f.submit "変更" %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal.to_s(:delimited) %></td>
      <td><%= link_to "削除する", cart_item_path(cart_item.item.id), method: :delete %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= link_to "買い物を続ける", root_path %>

<table>
  <tbody>
    <tr>合計金額</tr>
    <td><%= @total.to_s(:delimited) %></td>
  </tbody>
</table>

<%= link_to "情報入力に進む", root_path %>
