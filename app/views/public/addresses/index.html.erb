<div class="container">
  <div class="col-12">
    <div class="row offset-1 my-3">
      <h3 class="bg-light px-3">配送先登録/一覧</h3>
    </div>
    <div class="row">
      <div class="col-12">
        <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
        <%= render 'address_error', address: @address %>
        <div class="form-group">
          <%= f.label "郵便番号(ハイフンなし)", class: 'col-3' %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000", class: 'col-2' %><br>
          <%= f.label "住所", class: 'col-3' %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: 'col-6' %><br>
          <%= f.label "宛名", class: 'col-3' %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "令和道子", class: 'col-2' %>
          <label class="col-4"></label>
          <%= f.submit "  新規登録  ", class: 'btn btn-success text-right' %>
        <% end %>
        </div>
      </div>
    </div>
    <div class="row col-10 my-3">
      <table class="table table-bordered border-dark">
        <thead>
          <tr>
            <th class="table-bordered bg-light">郵便番号</th>
            <th class="table-bordered bg-light">住所</th>
            <th class="table-bordered bg-light">宛名</th>
            <th class="table-bordered bg-light"></th>
          </tr>
        </thead>
        <% @addresses.each do |address| %>
        <tbody>
          <tr>
            <td>
              <%= address.postal_code %>
            </td>
            <td>
              <%= address.address %>
            </td>
            <td>
              <%= address.name %>
            </td>
            <td class="text-center">
              <%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-success' %>　
              <%= link_to "削除する", address_path(address), method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-danger' %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
