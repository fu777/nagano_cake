<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="row offset-2 my-3">
        <h3 class="bg-light px-3">新規会員登録</h3>
      </div>
      <div class="row offset-1">

        <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <table>
            <tr>
              <td>名前</td>
              <td style="text-align: end;"><%= f.label "(姓)　" %></td>
              <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %></td>
              <td><%= f.label "(名)　" %></td>
              <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td style="text-align: end;"><%= f.label "(セイ)" %></td>
              <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ" %></td>
              <td><%= f.label "(メイ)" %></td>
              <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %></td>
            </tr>
            <tr>
              <td colspan="2"><%= f.label "メールアドレス" %></td>
              <td colspan="3"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@exsample.com" %></td>
            </tr>
            <tr>
              <td colspan="2"><%= f.label "郵便番号(ハイフンなし)" %></td>
              <td colspan="3"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %></td>
            </tr>
            <tr>
              <td colspan="2"><%= f.label "住所" %></td>
              <td colspan="3"><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町０−０", class: 'input-group input-group-sm' %></td>
            </tr>
            <tr>
              <td colspan="2"><%= f.label "電話番号(ハイフンなし)" %></td>
              <td colspan="3"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "0000000000" %></td>
            </tr>
            <tr>
              <td colspan="2"><%= f.label "パスワード(６文字以上)" %></td>
              <td colspan="3"><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td colspan="2"><%= f.label "パスワード(確認用)" %></td>
              <td colspan="3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td colspan="2"></td>
              <td colspan="3"><%= f.submit "           新規登録           ", class: 'btn btn-success' %></td>
            </tr>
          </table>
        </div>
      </div>
      <% end %>

<%= render "public/shared/links" %>
