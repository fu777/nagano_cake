    <div class="row offset-2 my-3">
      <%- if controller_name != 'sessions' %>
        <h5 class="bg-light px-3">既に登録済みの方</h5>
      </div>
      <div class="row offset-3 my-3">
        <%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。<br />
      </div>
      <% end %>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <h5 class="bg-light px-3">会員登録がお済みでない方</h5>
      </div>
      <div class="row d-flex justify-content-center">
        <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。<br />
      </div>
      <% end %>
    </div>
  </div>
</div>
