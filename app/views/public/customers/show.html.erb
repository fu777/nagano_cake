<div class="container">
  <div class="col-8">
    <div class="row offset-2 my-3">
      <h3 class="bg-light px-3">マイページ</h3>
    </div>
    <div class="row my-3">
      <label class="font-weight-bold pt-2">登録情報</label>
      <%= link_to "編集する", edit_path, class: 'btn btn-success ml-3' %>
    </div>
    <div class="row">
      <table class="table table-bordered border-dark">
        <tbody>
          <tr>
            <th class="table-bordered bg-light">氏名</th>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <th class="table-bordered bg-light">カナ</th>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th class="table-bordered bg-light">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th class="table-bordered bg-light">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="table-bordered bg-light">電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th class="table-bordered bg-light">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row my-3">
      <label class="font-weight-bold pt-2 col-2">配送先</label>
      <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary col-2' %><br>
    </div>
    <div class="row my-3">
      <label class="font-weight-bold pt-2 col-2">注文履歴</label>
      <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary col-2' %><br>
    </div>
  </div>
</div>
