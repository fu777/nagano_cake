<h1>注文情報入力</h1>

<%= form_with model: @order, url: confirm_path(@order), method: :post do |f| %>

<%= render 'order_error', order: @order %>

  <%= f.label "支払方法" %><br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%><br>
  <%= f.label "お届け先" %><br>
    <%= f.radio_button :select_address, 0, checked: true %>
      <%= f.label :select_address, "ご自身の住所" %><br>
      〒<%= @customer.postal_code %><%= @customer.address %><br>
      <%= @customer.last_name %><%= @customer.first_name %><br>
    <%= f.radio_button :select_address, 1 %>
      <%= f.label :select_address, "登録済み住所から選択" %><br>
      <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %><br>
    <%= f.radio_button :select_address, 2 %>
      <%= f.label :select_address, "新しいお届け先" %><br>
      <%= f.label "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000" %><br>
      <%= f.label "住所" %>
      <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0" %><br>
      <%= f.label "宛名" %>
      <%= f.text_field :name, autocomplete: "name", placeholder: "令和道子" %><br>
  <%= f.submit "確認画面へ進む" %>
<% end %>
