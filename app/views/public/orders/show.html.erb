<div class="container">
  <div class="row col-12">
    <div class="row offset-1 my-3">
      <h3 class="bg-light px-3">注文履歴詳細</h3>
    </div>
    <div class="row col-12 my-3">
      <div class="col-9">
        <label class="font-weight-bold">注文情報</label>
        <table class="table table-bordered border-dark">
          <tbody>
            <tr>
              <th class="table-bordered bg-light">注文日</th>
              <td><%= @order.created_at.to_s(:ymd) %></td>
            </tr>
            <tr>
              <th class="table-bordered bg-light">配送先</th>
              <td>
                〒<%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <th class="table-bordered bg-light">支払方法</th>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <th class="table-bordered bg-light">ステータス</th>
              <td><%= @order.status_i18n %></td>
            </tr>
          </tbody>
        </table>
        </div>
      <div class="col-3">
        <label class="font-weight-bold">請求情報</label>
        <table class="table table-bordered border-dark">
          <tbody>
            <tr>
              <th class="table-bordered bg-light">商品合計</th>
              <td><%= @total.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th class="table-bordered bg-light">配送料</th>
              <td><%= @order.shipping_cost.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th class="table-bordered bg-light">ご請求額</th>
              <td><%= @order.total_payment.to_s(:delimited) %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <div class="col-12">
      <div class="row col-10 my-3">
        <label class="font-weight-bold">注文内容</label>
        <table class="table table-bordered border-dark">
          <% @order_details.each do |order_detail| %>
          <thead class="table-bordered bg-light">
            <tr>
              <th>商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.price.to_s(:delimited) %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal.to_s(:delimited) %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

