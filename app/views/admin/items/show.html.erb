<h1>商品詳細</h1>

<%= image_tag @item.image, size: "400x300" %>

<table>
  <tbody>
    <tr>
      <th>商品名</th>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <th>商品説明</th>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <th>税込価格(税抜価格)</th>
      <td><%= @item.price.to_s(:delimited) %>(<%= @item.with_tax_price.to_s(:delimited) %>)円</td>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <td><%= @item.is_active_i18n %></td>
    </tr>
  </tbody>
</table>
<%= link_to "編集する", edit_admin_item_path %>
