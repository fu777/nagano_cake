<h1>商品詳細</h1>

<%= image_tag @item.image %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>商品説明</th>
      <th>ジャンル</th>
      <th>税込価格(税抜価格)</th>
      <th>販売ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @item.name %></td>
      <td><%= @item.introduction %></td>
      <td><%= @item.genre.name %></td>
      <td><%= @item.price %>(<%= @item.with_tax_price %>)</td>
      <td><%= @item.is_active_i18n %></td>
    </tr>
  </tbody>
</table>
<%= link_to "編集する", edit_admin_item_path %>
