<h1>注文履歴詳細</h1>

<table>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <th>購入者</th>
      <td><%= order.customer.last_name %> <%= order.customer.first_name %></td>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= order.created_at %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td><%= order.postal_code %><%= order.address %><br><%= order.name %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <%= form_with model: @orders, url: admin_order__path, method: :patch do |f| %>
      <td><%= order.status_i18n %>
        <%= f.select :status, Order.status_i18n %>
      </td>
      <td>
        <%= f.submit "更新" %>
      </td>
      <% end %>
    </tr>
  </tbody>
  <% end %>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
      <th></th>
    </tr>
  </thead>
  <% @order_details.each do |order_detail| %>
  <tbody>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.price.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.subtotal.to_s(:delimited) %></td>
      <%= form_with model: @order_details, url: admin_order_detail_path, method: :patch do |f| %>
      <td>
        <%= order_detail.making_status_i18n %></td>
        <%= f.select :making_status, options_from_collection_for_select(@order_details.making_status, :id, :making_status_i18n) %><br>
        <%= f.select :making_status, *[1..10], { include_blank: '個数選択' }, autofocus: true, autocomplete: "amount" %>
        <%= f.select :making_status, options_for_select(*[0..3], order_details.making_status_i18n) %>
      <td>
        <%= f.submit "更新" %>
      </td>
      <% end %>
    </tr>
  </tbody>
  <% end %>
</table>

<table>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <th>商品合計</th>
      <td><%= order.total.to_s(:delimited) %>円</td>
    </tr>
    <tr>
      <th>送料</th>
      <td><%= order.shipping_cost.to_s(:delimited) %>円</td>
    </tr>
    <tr>
      <th>請求金額合計</th>
      <td><%= order.total_payment.to_s(:delimited) %>円</td>
    </tr>
  </tbody>
  <% end %>
</table>
