<h1>注文履歴詳細</h1>

<table>
  <tbody>
    <tr>
      <th>購入者</th>
      <td>
        <%= link_to admin_customer_path do %>
          <%= @order.customer.last_name %> <%= @order.customer.first_name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.to_s(:ymd) %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td><%= @order.postal_code %><%= @order.address %><br><%= @order.name %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <%= form_with model: @new_status, url: admin_order_path, method: :patch do |f| %>
      <td>
        <%= f.label :status, "注文ステータス" %>
        <%= f.select :status, options_for_select(Order.statuses_i18n, @order.status) %>
      </td>
      <td>
        <%= f.submit "更新" %>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
      <th></th>
    </tr>
  </thead>
  <% @order_details.each do |order_detail| %>
  <tbody>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.price.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.subtotal.to_s(:delimited) %></td>
      <%= form_with model: @new_status, url: admin_order_detail_path, method: :patch do |f| %>
      <td>
        <%= f.select :making_status, options_for_select(OrderDetail.making_statuses_i18n) %>
      </td>
      <td>
        <%= f.submit "更新" %>
      </td>
      <% end %>
    </tr>
  </tbody>
  <% end %>
</table>

<table>
  <tbody>
    <tr>
      <th>商品合計</th>
      <td><%= @total.to_s(:delimited) %>円</td>
    </tr>
    <tr>
      <th>送料</th>
      <td><%= @order.shipping_cost.to_s(:delimited) %>円</td>
    </tr>
    <tr>
      <th>請求金額合計</th>
      <td><%= @order.total_payment.to_s(:delimited) %>円</td>
    </tr>
  </tbody>
</table>
