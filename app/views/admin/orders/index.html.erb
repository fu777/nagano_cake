<h1><%= @order.customer.last_name %><%= @order.customer.first_name %>さんの注文履歴</h1>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <% @order.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.amount %></td>
      <td><%= order.status_i18n %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= paginate @orders %>
