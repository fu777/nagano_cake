<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="row offset-1 my-3">
        <h3 class="bg-light px-3"><%= Customer.find(params[:customer_id]).last_name %><%= Customer.find(params[:customer_id]).first_name %>さんの注文履歴</h3>
      </div>
    <div class="row offset-2 my-3">
      <div class="col-10">
        <table class="table">
          <thead class="bg-light">
            <tr>
              <th>購入日時</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td>
                <%= link_to admin_order_path(order) do %>
                  <%= l order.created_at, format: :long %>
                <% end %></td>
              <td><%= order.order_details.count %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
        </div>
      </div>
      <div class="row my-3">
        <div class="col-12 d-flex justify-content-center">
          <%= paginate @order_page %>
        </div>
      </div>
    </div>
  </div>
</div>
