<h1><%= Customer.find(params[:customer_id]).last_name %><%= Customer.find(params[:customer_id]).first_name %>さんの注文履歴</h1>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td>
        <%= link_to admin_order_path(order) do %>
          <%= order.created_at %>
        <% end %></td>
      <td><%= order.order_details.count %></td>
      <td><%= order.status_i18n %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= paginate @order_page %>
