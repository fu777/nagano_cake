<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="row offset-1 my-3">
        <h3 class="bg-light px-3">ジャンル編集</h3>
      </div>
      <div class="row my-3">
        <div class="col-12">
          <%= form_with model: @genre, url: admin_genre_path do |f| %>
          <%= render 'genre_error', genre: @genre %>
          <div class="form-group">
            <%= f.label "ジャンル名", class: 'font-weight-bold ml-4 mr-5' %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ジャンル名", class: 'col-2 mr-5' %>
            <%= f.submit "変更を保存", class: 'btn btn-success' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
