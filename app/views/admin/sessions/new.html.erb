<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="row offset-1 my-3">
        <h3 class="bg-light px-3">管理者ログイン</h3>
      </div>

      <div class="row d-flex justify-content-center">

        <%= form_with model: @customer, url: admin_session_path do |f| %>

        <div class="field">
          <table>
            <tr>
              <td><%= f.label "メールアドレス" %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@exsample.com" %></td>
            </tr>
            <tr>
              <td><%= f.label "パスワード" %></td>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
          </table>
        </div>
      </div>

      <div class="row d-flex justify-content-center">
        <div class="actions my-3">
          <%= f.submit "ログイン", class: 'btn btn-success' %>
        </div>
        <% end %>
      </div>

<%= render "admin/shared/links" %>
